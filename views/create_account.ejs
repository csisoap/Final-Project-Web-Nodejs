<!-- Form tạo mới -->
<div class="container-fluid">
    <form action="/account/register" method="POST">
        <div class="row mb-3">
            <label for="Name" class="col-sm-2 col-form-label">Họ và tên</label>
            <div class="col-sm-10">
                <input type="name" class="form-control" id="Name" name="name">
            </div>
        </div>
        <div class="row mb-3">
            <label for="faculty" class="col-sm-2 col-form-label">Khoa/Phòng ban</label>
            <div class="col-sm-10">
                <select class="form-control" id="form-faculty" name="faculty">
                    <option selected> --Vui lòng chọn-- </option>
                    <% department.forEach((element, index) => { %> 
                        <%- 
                        `<option value="${element._id}">${element.name}</option>`
                        %>
                    <% });  %> 
                </select>
            </div>
        </div>
        <div class="row mb-3">
            <label for="username" class="col-sm-2 col-form-label">Username</label>
            <div class="col-sm-10">
                <input type="username" class="form-control" id="username" name="username">
            </div>
        </div>
        <div class="row mb-3">
            <label for="role" class="col-sm-2 col-form-label">Role</label>
            <div class="col-sm-10">
                <select class="form-control" id="role" name="role">
                    <option selected> --Vui lòng chọn-- </option>
                    <option>Admin</option>
                    <option>Viên chức</option>
                </select>
            </div>
        </div>
        <div class="row mb-3">
            <label for="inputEmail3" class="col-sm-2 col-form-label">Email</label>
            <div class="col-sm-10">
                <input type="email" class="form-control" id="Email" name="email">
            </div>
        </div>
        <div class="row mb-3">
            <label for="inputPassword3" class="col-sm-2 col-form-label">Password</label>
            <div class="col-sm-10">
                <input type="password" class="form-control" id="Password" name="password">
            </div>
        </div>
        <div class="row">
            <div class="col-sm-10 ml-auto">
                <button type="submit" class="btn btn-primary">Xác nhận</button>
            </div>
        </div>
    </form>
</div>
