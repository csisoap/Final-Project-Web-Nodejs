<nav aria-label="breadcrumb">
    <ol class="breadcrumb">
        <li class="breadcrumb-item"><a href="#"><i class="fas fa-home"></i> Trang chủ</a></li>
        <li class="breadcrumb-item"><a href="/announ">Quản lý thông báo</a></li>
        <li class="breadcrumb-item active" aria-current="page">Tạo mới</li>
    </ol>
</nav>

<!-- Form tạo mới -->
<div class="container-fluid">
    <form action="/announ/" method="POST">
        <div class="row mb-3">
            <label for="title" class="col-sm-2 col-form-label">Tiêu đề thông báo</label>
            <div class="col-sm-10">
                <input type="title" class="form-control" id="title" name="title">
            </div>
        </div>
        <div class="row mb-3">
            <label for="content" class="col-sm-2 col-form-label">Nội dung thông báo</label>
            <div class="col-sm-10">
                <textarea type="content" class="form-control" id="content" name="content"></textarea>
            </div>
        </div>
        <div class="row mb-3">
            <label for="role" class="col-sm-2 col-form-label">Danh mục</label>
            <div class="col-sm-10">
                <select class="form-control" id="role" name="role">
                    <option selected> --Vui lòng chọn-- </option>
                    <% cate.forEach((element, index) => { %> 
                        <%- 
                        `<option value="${element._id}" name="categories_id">${element.name}</option>`
                        %>
                    <% });  %> 
                </select>
            </div>
        </div>
        <div class="row">
            <div class="col-sm-10 ml-auto">
                <button type="submit" class="btn btn-primary">Xác nhận</button>
            </div>
        </div>
    </form>
</div>